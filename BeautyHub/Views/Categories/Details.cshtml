@model BeautyHub.Entities.Category

@{
    Layout = "~/Views/Shared/_Dashboardlayout.cshtml";
    ViewBag.Title = "Admin Categories";
}


<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
        </dt>

        <dd>
            @{
                var base64 = Convert.ToBase64String(Model.Image);
                var imageSrc = String.Format("data:image/gif;base64,{0}", base64);
                <img src='@imageSrc' id="service-image" alt="" width="200" />
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id },new { @class="btn btn-success"})
    @Html.ActionLink("Back to List", "Index",new { }, new { @class = "btn btn-primary" })
</p>
